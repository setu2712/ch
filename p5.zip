using System;public class Pascal
{
public static void Main(string[] args)
{
Console.Write("Enter the number of rows for Pascal's Triangle: ");
if (int.TryParse(Console.ReadLine(), out int numRows) && numRows > 0)
{
int[,] arr = new int[numRows, numRows];Console.WriteLine("Pascal Triangle : ");for (int i = 0; i <
numRows; i++)
{
for (int j = 0; j <= i; j++)
{
if (j == 0 || j == i)
{
arr[i, j] = 1;
}
else
{
arr[i, j] = arr[i - 1, j] + arr[i - 1, j - 1];
}Console.Write(arr[i, j] + " ");
}Console.WriteLine();
}
}
else
{
Console.WriteLine("Please enter a valid positive integer for the number of rows.");
}Console.ReadLine();
}
}








